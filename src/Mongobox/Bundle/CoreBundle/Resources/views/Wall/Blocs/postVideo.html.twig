{% if form_video is defined %}
	<form id="form_video" method="post">
		{{ form_widget(form_video.lien) }}
		<span class="btn" id="search-btn-video">Rechercher</span>
		 {{form_rest(form_video)}}
	</form>
{% else %}
	<h2>Ajout de tags</h2>
	<form id="form_tags" method="post" action="{{url('post_video_tags')}}">
		{{ form_widget(form_tags.tag) }}
		<span class="btn" id="video-button-add-tag">Ajouter</span>
		<div id="container-selected-tags">
			{% for tag in list_tags %}
				<li class="tag-item alert alert-info"><span>{{tag.name}}</span><button class="close" >&times;</button><input type="hidden" name="video_tags[tags][]" value="{{tag.id}}" /></li>
			{% endfor %}
		</div>
		{% set tagDataPrototype = '<span>__name__</span><button class="close" >&times;</button><input type="hidden" name="video_tags[tags][]" value="__id__" />' %}
		<div id="video_tags_list" class="tags manage-tags" data-prototype="{{ tagDataPrototype }}"></div>
		<input type="hidden" name="id_video" value="{{id_video}}" />
		{{form_row(form_tags._token)}}
		<input class="btn btn-primary" type="submit" id="submit-form-video-tags-add" value="Envoyer" />
	</form>
{% endif %}

{% block javascripts %}
	{% if form_video is defined %}
		{{ form_javascript(form_video) }}
	{% else %}
		{{ form_javascript(form_tags) }}
		<script src="{{ asset('bundles/mongoboxjukebox/js/manageTags.js') }}" type="text/javascript"></script>
		<script type="text/javascript">
			tags.urlLoadTag = '{{ url('video_tags_load_item') }}';
			tags.init();
		</script>
	{% endif %}
{% endblock javascripts %}