{% extends "MongoboxJukeboxBundle:Wall:layout.html.twig" %}

{% block title -%}- Tumblr Statistics{%- endblock title %}

{% block body %}
    <script src="{{ asset('bundles/mongoboxstatistics/js/highcharts.js') }}" type="text/javascript"></script>
    <div class="marketing">
        <div id="container"></div>
        <script type="text/javascript">
            $(function () {
                var chart;
                $(document).ready(function() {
                    chart = new Highcharts.Chart({
                        chart: {
                            renderTo: 'container',
                            zoomType: 'x',
                            spacingRight: 20
                        },
                        title: {
                            text: 'Evolution du volume d\'images postées depuis le début'
                        },
                        subtitle: {
                            text: document.ontouchstart === undefined ?
                                    'Click and drag in the plot area to zoom in' :
                                    'Drag your finger over the plot to zoom in'
                        },
                        xAxis: {
                            type: 'datetime',
                            maxZoom: 14 * 24 * 3600000,
                            title: {
                                text: null
                            }
                        },
                        yAxis: {
                            title: {
                                text: 'Images postées / jour'
                            },
                            showFirstLabel: false
                        },
                        tooltip: {
                            shared: true
                        },
                        legend: {
                            enabled: false
                        },
                        plotOptions: {
                            area: {
                                fillColor: {
                                    linearGradient: { x1: 0, y1: 0, x2: 0, y2: 1},
                                    stops: [
                                        [0, Highcharts.getOptions().colors[0]],
                                        [1, 'rgba(2,0,0,0)']
                                    ]
                                },
                                lineWidth: 1,
                                marker: {
                                    enabled: false,
                                    states: {
                                        hover: {
                                            enabled: true,
                                            radius: 5
                                        }
                                    }
                                },
                                shadow: false,
                                states: {
                                    hover: {
                                        lineWidth: 1
                                    }
                                },
                                threshold: null
                            }
                        },
                        series: [{
                            type: 'area',
                            name: 'Occurences',
                            pointInterval: {{ timeline.pointInterval }},
                            pointStart: Date.UTC(
                                {{ timeline.pointStart.format('Y') }},
                                {{ timeline.pointStart.format('m') }} - 1,
                                {{ timeline.pointStart.format('d') }}
                            ),
                            data: {{ timeline.data|json_encode|raw }}
                        }]
                    });
                });
            });
        </script>
    </div>
{% endblock body %}
