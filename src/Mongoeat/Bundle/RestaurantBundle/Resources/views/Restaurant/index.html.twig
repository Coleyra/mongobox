
{% block body -%}
    <h1>Liste des restaurants</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('restaurant_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.lat }}</td>
                <td>{{ entity.lng }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('restaurant_show', { 'id': entity.id }) }}">voir</a>
                    </li>
                    <li>
                        <a href="{{ path('restaurant_edit', { 'id': entity.id }) }}">modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('restaurant_new') }}">
                Ajouter un nouveau restaurant
            </a>
        </li>
    </ul>
    {% endblock %}
