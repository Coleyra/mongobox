{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Modifier son vote</h1>

    <form action="{{ path('vote_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Modifier</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <form action="{{ path('vote_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}
