<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
		<parameter key="emakina_ldap.user_provider.class">Emakina\Bundle\LdapBundle\Security\User\LdapUserProvider</parameter>
        <parameter key="emakina_ldap.ldapAdapter.class">Zend\Ldap\Ldap</parameter>
		<parameter key="security.authentication.listener.form.class">Emakina\Bundle\LdapBundle\Security\Firewall\LdapFormAuthenticationListener</parameter>
        <parameter key="security.authentication.provider.dao.class">Emakina\Bundle\LdapBundle\Security\Authentication\Provider\LdapAuthenticationProvider</parameter>
		<parameter key="emakina_ldap.security.authentication.factory.form">Emakina\Bundle\LdapBundle\DependencyInjection\Security\Factory\LdapFormLoginFactory</parameter>
		<parameter key="emakina_ldap.configure_menu_listener.class">Emakina\Bundle\LdapBundle\EventListener\ConfigureMenuListener</parameter>
		<parameter key="emakina_ldap.listener.user_post_save.class">Emakina\Bundle\LdapBundle\EventListener\UserListener</parameter>
		<parameter key="emakina_ldap.ldapManager.class">Emakina\Bundle\LdapBundle\Ldap\LdapManager</parameter>
    </parameters>

    <services>
        <service id="emakina_ldap.ldapAdapter" class="%emakina_ldap.ldapAdapter.class%">
            <argument>%emakina_ldap.ldapAdapter.options%</argument>
        </service>
		
		<service id="emakina_ldap.user_provider" class="%emakina_ldap.user_provider.class%">
			<argument type="service" id="emakina_ldap.ldapAdapter" />
		</service>
		
		<service id="security.authentication.factory.form" class="%emakina_ldap.security.authentication.factory.form%">
            <tag name="security.listener.factory" />
        </service>

        <service id="security.authentication.listener.form"
                 class="%security.authentication.listener.form.class%"
                 parent="security.authentication.listener.abstract"
                 abstract="true">
        </service>

		<service id="emakina_ldap.configure_menu_listener" class="%emakina_ldap.configure_menu_listener.class%">
            <tag name="kernel.event_listener" event="emakina_ika_core.menu_configure" method="onMenuConfigure" />
        </service>
		<service id="emakina_ldap.listener.user_post_save" class="%emakina_ldap.listener.user_post_save.class%">
			<argument type="service" id="emakina_ldap.ldapmanager" />
		    <tag name="kernel.event_listener" event="user.post_save" method="onUserPostSave" />
		</service>
		
		<service id="emakina_ldap.ldapManager" class="%emakina_ldap.ldapManager.class%">
            <argument type="service" id="emakina_ldap.ldapAdapter" />
        </service>
    </services>

</container>
